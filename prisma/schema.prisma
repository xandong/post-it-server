generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(uuid())
  name        String
  email       String @unique
  password    String
  notes       Note[]
}

model Note {
  id          String @id @default(uuid())
  title       String
  description String
  content     String?
  author      User @relation(fields: [authorId], references: [id])
  authorId    String 
}
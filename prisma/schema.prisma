generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          String @id @default(uuid())
  name        String
  email       String @unique
  password    String
  notes       Note[]

  @@map("users")
  @@unique([id, email])
}

model Note {
  id          String @id @default(uuid())
  date        DateTime
  title       String
  description String
  content     String?
  author      User @relation(fields: [authorId], references: [id])
  authorId    String 
  authorName  String

  @@map("notes")
}